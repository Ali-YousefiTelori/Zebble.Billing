<Project Sdk="MSBuild.Sdk.Extras/3.0.23">
  <PropertyGroup>
    <TargetFrameworks>Xamarin.iOS10;MonoAndroid90</TargetFrameworks>
    <TargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">$(TargetFrameworks);uap10.0.18362</TargetFrameworks>
    <AssemblyName>Zebble.Billing</AssemblyName>
    <RootNamespace>Zebble</RootNamespace>
    <PackageId>Zebble.Billing</PackageId>
    <Product>$(AssemblyName) ($(TargetFramework))</Product>
    <Version>1.0.11.0</Version>
    <PackOnBuild>true</PackOnBuild>
    <NeutralLanguage>en</NeutralLanguage>
    <LangVersion>default</LangVersion>
    <DefineConstants>$(DefineConstants);</DefineConstants>
    <UseFullSemVerForNuGet>false</UseFullSemVerForNuGet>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <LangVersion>latest</LangVersion>
    <DebugType>portable</DebugType>
    <PackageLicenseUrl>https://raw.githubusercontent.com/Geeksltd/Zebble.Billing/master/Zebble-LicenseAgreement.txt</PackageLicenseUrl>
    <PackageProjectUrl>https://nuget.org/packages/Zebble.Billing/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Geeksltd/Zebble.Billing/</RepositoryUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/Geeksltd/Zebble.Billing/master/icon.png</PackageIconUrl>
    <PackageTags>xamarin, windows, ios, android, zebble</PackageTags>
    <Title>Zebble.Billing</Title>
    <Description>Zebble IAP plugin for Xamarin.</Description>
    <PackageReleaseNotes>Minor fixes</PackageReleaseNotes>
    <Owners>Geeks Ltd</Owners>
    <Authors>Geeks Ltd</Authors>
    <Copyright>Geeks Ltd 2021, All rights reserved.</Copyright>
    <DisableExtraReferences>true</DisableExtraReferences>
    <Configurations>Debug;Release;DebugCafeBazaar;ReleaseCafeBazaar</Configurations>
  </PropertyGroup>
  <PropertyGroup Condition=" $(Configuration.StartsWith('Debug')) ">
    <DebugSymbols>true</DebugSymbols>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
  </PropertyGroup>
  <PropertyGroup Condition=" $(Configuration.StartsWith('Release')) ">
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>
  <PropertyGroup Condition=" $(Configuration.EndsWith('CafeBazaar')) ">
    <DefineConstants>$(DefineConstants);CAFEBAZAAR</DefineConstants>
    <PackageId>Zebble.Billing.CafeBazaar</PackageId>
    <PackageProjectUrl>https://nuget.org/packages/Zebble.Billing.CafeBazaar/</PackageProjectUrl>
    <Title>Zebble.Billing.CafeBazaar</Title>
  </PropertyGroup>
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('uap10.0')) ">
    <DefineConstants>$(DefineConstants);UWP</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('MonoAndroid')) ">
    <DefineConstants>$(DefineConstants);ANDROID</DefineConstants>
    <AndroidUseIntermediateDesignerFile>false</AndroidUseIntermediateDesignerFile>
  </PropertyGroup>
  <PropertyGroup Condition=" $(TargetFramework.StartsWith('Xamarin.iOS')) ">
    <DefineConstants>$(DefineConstants);IOS</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="Shared\**\*.cs" />
  </ItemGroup>
  <ItemGroup Condition=" $(DefineConstants.Contains('UWP')) ">
    <Compile Include="UWP\**\*.cs" />
  </ItemGroup>
  <ItemGroup Condition=" $(DefineConstants.Contains('ANDROID')) ">
    <Compile Include="Android\**\*.cs" />
    <PackageReference Include="Xamarin.Essentials" Version="1.6.1-preview2" Condition=" $(DefineConstants.Contains('CAFEBAZAAR'))==false " />
  </ItemGroup>
  <PropertyGroup Condition=" $(DefineConstants.Contains('ANDROID')) AND $(DefineConstants.Contains('CAFEBAZAAR')) ">
    <TargetsForTfmSpecificContentInPackage>$(TargetsForTfmSpecificContentInPackage);IncludeReferencedCafeBazaarDllsInPackage</TargetsForTfmSpecificContentInPackage>
  </PropertyGroup>
  <Target Name="IncludeReferencedCafeBazaarDllsInPackage" Condition="'$(IncludeBuildOutput)' != 'false'">
    <ItemGroup>
      <TfmSpecificPackageFile Include="$(OutputPath)\Plugin.InAppBilling.Abstractions.dll" PackagePath="lib/$(TargetFramework)" />
      <TfmSpecificPackageFile Include="$(OutputPath)\Plugin.InAppBilling.dll" PackagePath="lib/$(TargetFramework)" />
      <TfmSpecificPackageFile Include="$(OutputPath)\Plugin.InAppBilling.VendingLibrary.dll" PackagePath="lib/$(TargetFramework)" />
    </ItemGroup>
  </Target>
  <ItemGroup Condition=" $(DefineConstants.Contains('CAFEBAZAAR')) ">
    <Reference Include="Plugin.InAppBilling">
      <HintPath>CafeBazaar\Plugin.InAppBilling.dll</HintPath>
    </Reference>
    <Reference Include="Plugin.InAppBilling.Abstractions">
      <HintPath>CafeBazaar\Plugin.InAppBilling.Abstractions.dll</HintPath>
    </Reference>
    <Reference Include="Plugin.InAppBilling.VendingLibrary">
      <HintPath>CafeBazaar\Plugin.InAppBilling.VendingLibrary.dll</HintPath>
    </Reference>
    <PackageReference Include="Plugin.CurrentActivity" Condition=" $(DefineConstants.Contains('ANDROID')) ">
      <Version>2.1.0.4</Version>
    </PackageReference>
  </ItemGroup>
  <ItemGroup Condition=" $(DefineConstants.Contains('IOS')) ">
    <Compile Include="iOS\**\*.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Remove=".gitignore" />
    <None Remove="icon.png" />
    <None Remove="README.md" />
    <None Remove="Zebble-LicenseAgreement.txt" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Zebble" Version="4.5.451" />
    <PackageReference Include="Zebble.WebApi" Version="4.5.390" />
    <PackageReference Include="Plugin.InAppBilling" Version="4.0.2" Condition=" $(DefineConstants.Contains('CAFEBAZAAR'))==false " />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Olive" Version="2.1.210" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Android\" />
    <Folder Include="iOS\" />
    <Folder Include="UWP\" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Remove="CafeBazaar\**" />
    <None Remove="CafeBazaar\**" />
  </ItemGroup>
  <Import Project="..\Billing.Shared\Billing.Shared.projitems" Label="Shared" />
</Project>